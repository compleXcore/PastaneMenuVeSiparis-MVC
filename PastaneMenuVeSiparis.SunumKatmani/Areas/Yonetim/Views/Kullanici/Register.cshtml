@model PastaneMenuVeSiparis.VarlikKatmani.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        .gradient-custom {
            background: #6a11cb;
        }
    </style>
</head>
<body class="gradient-custom">
    <div class="col-12">
        <div class="row">
            <section class="vh-100">
                <div class="py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                                <div class="card-body p-5">
                                    <div class="mb-md-5 mt-md-4 pb-5">
                                        <h2 class="fw-bold mb-3">Kayıt Ol</h2>
                                        @using (Html.BeginForm("Register", "Kullanici", FormMethod.Post, new { @class = "form-horizontal" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            @Html.LabelFor(x => x.KullaniciAdi, new { @class = "form-label" })
                                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                                @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.KullaniciAdi, "", new { @class = "text-danger" })
                                            </div>

                                            @Html.LabelFor(x => x.KullaniciSifre, new { @class = "form-label" })
                                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                                @Html.TextBoxFor(x => x.KullaniciSifre, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.KullaniciSifre, "", new { @class = "text-danger" })
                                            </div>

                                            @Html.LabelFor(x => x.Adres, new { @class = "form-label" })
                                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                                @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Adres, "", new { @class = "text-danger" })
                                            </div>

                                            @Html.LabelFor(x => x.Telno, new { @class = "form-label" })
                                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                                @Html.TextBoxFor(x => x.Telno, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.Telno, "", new { @class = "text-danger" })
                                            </div>

                                            <div>
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group text-center offset-2">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <button type="submit" class="btn btn-outline-light btn-lg px-5">Kayıt Ol</button>
                                                </div>
                                            </div>
                                        }

                                        <div>
                                            <p class="mb-0" style="margin-top:35px; text-decoration:none">
                                                Hesabın var mı? <a href="@Url.Action("Login", "Kullanici", new { area = "Yonetim"})" class="text-white-50 fw-bold">Giriş Yap</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
